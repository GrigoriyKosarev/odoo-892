<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_pricelist_import_wizard_form" model="ir.ui.view">
        <field name="name">pricelist.import.wizard.form</field>
        <field name="model">pricelist.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Pricelist">
                <sheet>
                    <group>
                        <group>
                            <field name="pricelist_id" readonly="1"/>
<!--                            <field name="start_date" widget="date"/>-->
<!--                            <field name="end_date" widget="date"/>-->
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="filename" invisible="1"/>
                            <field name="excel_file" filename="filename"/>
                        </group>
                        <group>
                            <field name="header_row"/>
                            <field name="internal_ref_col"/>
                            <field name="price_col"/>
                        </group>
                    </group>
                    <div class="oe_clear">
                        <p class="oe_grey">
                            <strong>File Requirements:</strong><br/>
                            • Excel file (.xlsx or .xls format)<br/>
                            • Required columns: "Internal Reference", "Price"<br/>
                            • Internal Reference must match product default_code<br/>
                            • Price should be numeric value
                        </p>
                    </div>
                </sheet>
                <footer>
                    <button name="action_import" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
